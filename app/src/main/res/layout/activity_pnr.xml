<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/train"
    tools:context=".Pnr">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="true"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#ddf70409"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="3dp"
                android:animateLayoutChanges="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="115dp"
                android:textStyle="bold"
                android:textColor="#ffff"
                android:textSize="25sp"
                android:text="PNR STATUS"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="385dp"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="45dp"
                android:layout_height="wrap_content">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#bfccc4"
                    app:cardCornerRadius="10dp"
                    app:cardMaxElevation="100dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PNR NO:"
                android:id="@+id/pnr1"
                android:textColor="#f7f5f5"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="20dp"
                android:textSize="25sp"
                android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Pnr number"
                        android:id="@+id/pnr"
                        android:layout_marginTop="0dp"
                        android:layout_marginLeft="140dp"
                        android:textSize="25sp"
                        android:textStyle="bold"/>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_marginTop="50dp"
                    app:cardCornerRadius="10dp"
                    android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Train Name:"
                    android:id="@+id/tname1"
                    android:textColor="#0d0000"
                    android:layout_marginLeft="10dp"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Train Name"
                    android:textColor="#f2031f"
                    android:id="@+id/tname"
                    android:layout_marginLeft="150dp"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Train Number:"
                android:id="@+id/tno1"
                android:textColor="#0d0000"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"

                android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Train number"
                    android:id="@+id/tno"
                    android:textColor="#f2031f"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="150dp"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Boarding Date:"
                android:id="@+id/bd1"
                android:layout_marginTop="70dp"
                android:textColor="#0d0000"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Boarding Date"
                    android:id="@+id/bd"
                    android:textColor="#f2031f"
                    android:layout_marginTop="70dp"
                    android:layout_marginLeft="150dp"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="From:"
                android:id="@+id/from1"
                android:textColor="#0d0000"
                android:layout_marginTop="105dp"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="From"
                    android:textColor="#f2031f"
                    android:id="@+id/from"
                    android:layout_marginTop="105dp"
                    android:layout_marginLeft="150dp"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To:"
                android:id="@+id/t1o"
                android:layout_marginTop="140dp"
                android:textColor="#0d0000"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="To"
                    android:textColor="#f2031f"
                    android:id="@+id/to"
                    android:layout_marginTop="140dp"
                    android:layout_marginLeft="150dp"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#0d0000"
                android:text="Reserved Upto:"
                android:id="@+id/res1"
                android:layout_marginTop="185dp"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Reserved Upto:"
                    android:id="@+id/res"
                    android:textColor="#f2031f"
                    android:layout_marginTop="185dp"
                    android:layout_marginLeft="150dp"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Boarding point:"
                android:id="@+id/bdu1"
                android:layout_marginTop="220dp"
                android:textColor="#0d0000"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Boarding point"
                    android:id="@+id/bdu"
                    android:textColor="#f2031f"
                    android:layout_marginTop="220dp"
                    android:layout_marginLeft="150dp"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Class:"
                android:textColor="#0d0000"
                android:id="@+id/classs1"
                android:layout_marginTop="255dp"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"

                android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Class"
                    android:id="@+id/classs"
                    android:textColor="#f2031f"
                    android:layout_marginTop="255dp"
                    android:layout_marginLeft="150dp"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
                </android.support.v7.widget.CardView>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="385dp"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#f50313"
                android:layout_marginTop="385dp"
                app:cardCornerRadius="10dp"
                android:animationCache="true">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PASSENGER DETAILS"
                    android:layout_marginLeft="70dp"
                    android:textStyle="bold"
                    android:textColor="#ffff"
                    android:textSize="20sp"
                    />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="415dp"
                app:cardCornerRadius="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:hint="passenger"
                    android:id="@+id/pass"
                    android:layout_marginTop="5dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="35dp"
                    android:hint="passenger2"
                    android:id="@+id/pass2"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    />
            </android.support.v7.widget.CardView>

        </android.support.v7.widget.CardView>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>