<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Booking"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="E-Ticket Booking"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="#ffff"
        android:background="#744ea9"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:elevation="@dimen/spot_size"
        app:cardMaxElevation="@dimen/activity_vertical_margin"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:text="FROM       :"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"/>
            <EditText
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/from33"
                android:inputType="textAutoComplete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter source name"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="45dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:text="TO             :"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"/>
            <EditText
                android:layout_marginLeft="13dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:id="@+id/to33"
                android:inputType="textAutoComplete"
                android:layout_height="wrap_content"
                android:hint="Enter destination name"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="105dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:text="DATE         :"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"/>

            <EditText
                android:layout_marginLeft="8dp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:id="@+id/date"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:hint="     dd-mm-yyyy       " />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="18dp"
                android:text="SELECT"
                android:onClick="onClick"
                android:soundEffectsEnabled="true"
                android:id="@+id/select"
                tools:ignore="OnClick" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="155dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:text="TRAIN NO :"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"/>
            <EditText
                android:layout_marginLeft="13dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:id="@+id/tno"
                android:inputType="number"
                android:maxLength="5"
                android:layout_height="wrap_content"
                android:hint="Enter train number"/>
        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_marginTop="240dp"
            android:id="@+id/book"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:clickable="true"
            android:soundEffectsEnabled="true"
            android:text="Book Ticket" />




    </android.support.v7.widget.CardView>



</RelativeLayout>