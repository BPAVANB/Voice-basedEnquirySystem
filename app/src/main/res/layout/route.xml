<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="10dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardUseCompatPadding="true"
            card_view:cardCornerRadius="15dp">
        <!--
        items for a single row of RecyclerView
        -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="10dp"
                card_view:cardBackgroundColor="#f40303">
                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="#fcf9f9"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:textStyle="bold"/>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="34dp"
                card_view:cardCornerRadius="10dp"
                card_view:cardBackgroundColor="#0ce48d">
                <TextView
                    android:id="@+id/codel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Station-Code"
                   android:layout_marginLeft="100dp"
                    android:textColor="#fdfbfb"
                    android:textSize="23sp"
                    android:textStyle="bold"/>

            </android.support.v7.widget.CardView>


      <android.support.v7.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="68dp"
          card_view:cardCornerRadius="10dp">
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <android.support.v7.widget.CardView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  card_view:cardBackgroundColor="#4a9693"
                  card_view:cardCornerRadius="10dp"
                  card_view:cardMaxElevation="15dp">
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="   Arrival    "
                      android:textSize="20dp"
                      android:textColor="#ffff"/>

              </android.support.v7.widget.CardView>
              <android.support.v7.widget.CardView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="120dp"
                  card_view:cardMaxElevation="15dp"
                  card_view:cardBackgroundColor="#4a9693"
                  card_view:cardCornerRadius="10dp">
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="  Departure  "
                      android:textSize="20dp"
                      android:textColor="#ffff"/>
              </android.support.v7.widget.CardView>
          </LinearLayout>
          <android.support.v7.widget.CardView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="35dp">
              <TextView
                  android:id="@+id/email"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Arrival"
                  android:layout_marginLeft="17dp"
                  android:textColor="#000"
                  android:textStyle="bold"
                  android:textSize="15sp" />
              <TextView
                  android:id="@+id/mobileNo"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Departure"
                  android:layout_marginLeft="230dp"
                  android:textColor="#000"
                  android:textStyle="bold"
                  android:textSize="15sp" />
          </android.support.v7.widget.CardView>
      </android.support.v7.widget.CardView>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.v7.widget.CardView>